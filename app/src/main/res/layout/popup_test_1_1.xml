<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/NintendoFont"
    >

    <Button
        android:id="@+id/resume_tv"
        android:layout_width="164dp"
        android:layout_height="87dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@color/colorPrimaryLittleLight"
        android:text="@string/resume_test"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/new_test_tv"
        android:layout_width="166dp"
        android:layout_height="86dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@color/colorPrimaryLittleLight"
        android:text="@string/new_test"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/resume_tv"
        app:layout_constraintStart_toStartOf="@+id/resume_tv"
        app:layout_constraintTop_toBottomOf="@+id/resume_tv" />


    <include
        android:id="@+id/practice_test_view_options"
        layout="@layout/practice_test_popup_preferences_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_test_tv" />
</android.support.constraint.ConstraintLayout>