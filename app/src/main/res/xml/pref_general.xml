<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/title_activity_settings">

    <SwitchPreference
        android:defaultValue="true"
        android:key="diff_key"
        android:summary="Displays difficulty of each question"
        android:title="Show question difficulty" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="q_score_key"
        android:summary="Displays result of last attempt for each question"
        android:title="Show question score" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="disable_twice_correct"
        android:summary="Exclude questions correctly answered twice or more."
        android:title="Exclude correctly answered questions" />


</PreferenceScreen>




